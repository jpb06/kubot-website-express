{
  "compilerOptions": {
    "module": "es2015",
    "moduleResolution": "node",
    "target": "es5",
    "sourceMap": true,
    "outDir": "./build",
    "removeComments": true,
    "strict": true,
    "noImplicitReturns": true,
    "noImplicitAny": true
  },
  "compileOnSave": false,
  "include": [
    "./sources/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
